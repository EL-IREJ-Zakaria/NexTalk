<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.NexTalk" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="android:colorBackground">@color/colorBackground</item>
        <item name="colorSurface">@color/colorSurface</item>
        <item name="android:textColorPrimary">@color/textPrimary</item>
        <item name="android:textColorSecondary">@color/textSecondary</item>
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:navigationBarColor">@color/colorBackground</item>
    </style>

    <style name="Theme.NexTalk" parent="Base.Theme.NexTalk" />

    <!-- Splash Theme -->
    <style name="Theme.NexTalk.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/colorPrimary</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/ic_logo</item>
        <item name="postSplashScreenTheme">@style/Theme.NexTalk</item>
    </style>

    <!-- Auth Theme -->
    <style name="Theme.NexTalk.Auth" parent="Theme.NexTalk">
        <item name="android:windowBackground">@color/colorBackground</item>
    </style>

    <!-- Chat Theme -->
    <style name="Theme.NexTalk.Chat" parent="Theme.NexTalk">
        <item name="android:windowBackground">@color/chatBackground</item>
    </style>

    <!-- Call Theme (écran sombre pour les appels) -->
    <style name="Theme.NexTalk.Call" parent="Theme.NexTalk">
        <item name="android:windowBackground">@color/callBackground</item>
        <item name="android:statusBarColor">@color/callBackground</item>
        <item name="android:navigationBarColor">@color/callBackground</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!-- Style pour les images arrondies dans les messages -->
    <style name="RoundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Style pour les chips de réactions -->
    <style name="ReactionChipStyle" parent="Widget.Material3.Chip.Suggestion">
        <item name="chipBackgroundColor">@color/white</item>
        <item name="chipStrokeColor">@color/divider</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="chipCornerRadius">16dp</item>
        <item name="android:textSize">12sp</item>
    </style>

    <!-- BottomSheet Theme -->
    <style name="Theme.NexTalk.BottomSheet" parent="Theme.Material3.DayNight.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Material3.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">@style/BottomSheetShapeAppearance</item>
        <item name="backgroundTint">?android:attr/colorBackground</item>
    </style>

    <style name="BottomSheetShapeAppearance">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">20dp</item>
        <item name="cornerSizeTopRight">20dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <!-- Status Activity Theme (fullscreen colored background) -->
    <style name="Theme.NexTalk.Status" parent="Theme.NexTalk">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:navigationBarColor">@color/colorPrimary</item>
    </style>

</resources>
